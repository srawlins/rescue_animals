<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(success_story) -%>">
  <span class='title'>
    <%= success_story.title %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), success_story_url(success_story),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_success_story_path(success_story),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_success_story_path(success_story),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => success_story.title),
        :method => :delete %>
  </span>
</li>
